{
	"Форма": {
		"prefix": "form",
		"body": [
			"<div class=\"form_container\">",
            "    <form action=\"index.html\" class=\"form\" id=\"form\">",
            "        <input type=\"text\" id=\"login\" name=\"login\" pattern=\"[A-Za-z0-9]\\w*@[A-Za-z0-9]+.[A-Za-z]+\" placeholder=\"Введите ваш логин\" required/>",
            "        <input type=\"password\" id=\"password\" name=\"password\" pattern=\"[A-Za-z0-9]{6,20}\" placeholder=\"Введите ваш пароль\" minlength=\"6\" maxlength=\"20\" required/>",
            "        <input type=\"submit\" id=\"submit\" name=\"submit\" value=\"Войти\"/>",
            "    </form>",
        	"</div>"
		],
		"description": "Подключение html кода формы"
	},

	"Стили": {
		"prefix": ["formStyle", "styles"],
		"body": [
			".form_container { ",
			"    display: flex;",
			"    justify-content: center;",
			"    align-items: center;",
			"    height: 100vh;",
			"    font-size: 62.5%; ",
			"}",
			"#form {",
			"    display: flex;",
			"    justify-content: center;",
			"    align-items: center;",
			"    flex-direction: column;",
			"}",
			"#login, #password, #submit {",
			"    margin: 1rem;",
			"    width: 40rem;",
			"    height: 3rem;",
			"}"
		],
		"description": "Подключение стилей формы"
	}
}